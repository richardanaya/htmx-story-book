
<section class="library">
    <h2>Choose Your Adventure</h2>
    {{#each state.library}}
        <div class="book-card">
            <h3><a href="/pages/book/{{this.id}}" hx-get="/pages/book/{{this.id}}" hx-target="main" hx-swap="innerHTML" hx-push-url="true">{{this.title}}</a></h3>
            <p>{{this.summary}}</p>
        </div>
    {{/each}}
</section>
